<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLoginActivity">

    <EditText
        android:id="@+id/access_code_value"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:hint="Enter Access Code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <EditText
        android:id="@+id/email_value"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:hint="Enter email"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintEnd_toEndOf="@+id/access_code_value"
        app:layout_constraintStart_toStartOf="@+id/access_code_value"
        app:layout_constraintTop_toBottomOf="@+id/access_code_value"
        app:layout_constraintVertical_bias="0.575" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/email_value"
        app:layout_constraintStart_toStartOf="@+id/email_value"
        app:layout_constraintTop_toBottomOf="@+id/access_code_value" />

</androidx.constraintlayout.widget.ConstraintLayout>