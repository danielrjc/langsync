<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_button"
    android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Reported User"
            android:id="@+id/reported_user">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            android:text="Reported Reason"
            android:layout_marginBottom="10dp"
            android:id="@+id/reported_reason">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ban_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/poppins_semibold"
                android:src="@drawable/baseline_remove_circle_24"
                android:text="Ban User" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/remove_report"
                android:src="@drawable/ic_trash"/>

    </LinearLayout>

</LinearLayout>