<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/received_msg_styling"
        android:backgroundTint="@color/received_msg"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:id="@+id/received_msg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/received_msg_txt"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:id="@+id/loading_msg">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/loading_msg_img"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_msg_styling"
        android:backgroundTint="@color/sent_msg"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:id="@+id/sent_msg"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/sent_msg_txt"/>
    </LinearLayout>

</RelativeLayout>